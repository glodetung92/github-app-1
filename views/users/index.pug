extends ../layouts/common.pug

block content
	h1 
		span.mr-4 Users
		a.btn.btn-primary(href='/users/create') New
	
	.d-flex.align-items-center
		

		form.ml-auto(aciton="/users/search" method="GET" class="d-flex")
			input(type="text", name="q", class='form-control')
			button(class="btn btn-primary") Search

	table.table
		tr
			th Name
			th Phone
			th Actions

		each user in users
			tr
				td= user.name
				td= user.phone
				td
					a.btn.btn-Danger(href='/users/' + user.id) View